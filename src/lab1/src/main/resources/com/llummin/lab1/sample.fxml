<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.llummin.lab1.GameController"
  alignment="center"
  hgap="10"
  vgap="10">

  <GridPane GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="10">
    <Label fx:id="leftPaneLabel" text="Здесь будут числа или пиктограммы"/>
  </GridPane>

  <Button text="Начать" GridPane.columnIndex="0" GridPane.rowIndex="11" GridPane.columnSpan="2"
    onAction="#startGame"/>

  <GridPane GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="10">
    <Label fx:id="rightPaneLabel" text="Здесь будут даны варианты ответов"/>
  </GridPane>

  <Button text="Проверить" GridPane.columnIndex="1" GridPane.rowIndex="11" GridPane.columnSpan="1"
    onAction="#checkAnswers"/>
</GridPane>